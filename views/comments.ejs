<!DOCTYPE html>
<html>
<head>
  <title>Comments</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Comments</h1>
    <div id="commentsList"></div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script>
    $(document).ready(function() {
      // Fetch comments data from the server using AJAX
      $.ajax({
        url: '/api/comments',
        method: 'GET',
        success: function(response) {
          // Handle the response and update the commentsList element
          var commentsList = $('#commentsList');
          // Iterate through the comments and append them to the commentsList element
          response.forEach(function(comment) {
            commentsList.append('<div class="card">' + comment.text + '</div>');
          });
        }
      });
    });
  </script>
</body>
</html>
